{
  "version": "1.1.2",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--silent",
        "--force"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "**/__tests__/",
        "**/test/",
        "*.*ignore",
        "*.md"
      ],
      "message": "refactor(release): publish %v"
    }
  }
}
