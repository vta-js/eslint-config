{
  "version": "2.0.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--silent",
        "--force"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "**/__tests__/**/*.*",
        "**/test/**/*.*",
        "**/*.*ignore",
        "**/*.md"
      ],
      "message": "refactor(release): publish %v"
    }
  }
}
